@model HotelWebApp.Models.Blog

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Panel.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm("create", "blog", FormMethod.Post, new { enctype = "multipart/form-data", role = "form" }))
