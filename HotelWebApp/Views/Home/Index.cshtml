@using HotelWebApp.Models;

@{
    ViewBag.Title = "Home Page";
    HotelDbContext db = new HotelDbContext();
}


@{
    var slider = db.Slider.OrderBy(a => a.Row).ToList();
    var sliderCount = db.Slider.ToArray().Count();
}



<div id="carouselExampleIndicators" class="carousel slide mt-1" data-ride="carousel">
    <ol class="carousel-indicators">
        @{

            if (sliderCount > 0)
            {


                for (int i = 0; i < sliderCount; i++)
                {

                    if (true)
                    {

                        <li data-target="#carouselExampleIndicators" data-slide-to="@slider[i].ID " class=""></li>
                    }

                }
            }
        }

    </ol>
    <div class="carousel-inner">
        @{
            if (slider.Count > 0)
            {


                foreach (var item in slider)
                {
                    <div class="carousel-item">
                        <img src="@item.FileName" class="d-block w-100" height="300" alt="...">
                    </div>
                }
            }
        }


    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div>
    <div class="row">
        <div class="col">
            <div class="jumbotron container jumbotronBg1">
                <h1>ASP.NET 1</h1>
                <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
                <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
            </div>
        </div>
        <div class="col">
            <div class="jumbotron container jumbotronBg2">
                <h1>ASP.NET 2</h1>
                <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
                <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
            </div>
        </div>
        <div class="col">
            <div class="jumbotron container jumbotronBg3">
                <h1>ASP.NET 3</h1>
                <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
                <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
            </div>
        </div>
    </div>
</div>


@section scripts  {

    <script>
        $(document).ready(function(){
  $("#carouselExampleIndicators .carousel-indicators li:first").addClass("active");
  $("#carouselExampleIndicators .carousel-inner .carousel-item:first").addClass("active");
});
    </script>

}